<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.readboy.library.gif.GifView
        android:id="@+id/fragment_animation_word_gif"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="@dimen/fragment_animation_word_gif_margin_top"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_animation_word_customradiuslinearlayout_margin_bottom"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_animation_word_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_animation_word_sound_margin_top"
            android:layout_marginBottom="@dimen/fragment_animation_word_sound_margin_bottom"
            android:background="@drawable/playing_sound_animation"
            android:clickable="true" />

        <com.readboy.mobile.dictionary.dict.DictWordView
            android:id="@+id/fragment_animation_word_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay" />
    </LinearLayout>


</LinearLayout>