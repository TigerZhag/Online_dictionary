<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_gravity="center_vertical"
		android:orientation="vertical"
		android:background="@drawable/remind_dialog_bg_1">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="18dp"
			android:paddingLeft="25dp"
			android:visibility="gone"
			>
			<TextView android:id="@+id/remind_title_id"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:textColor="@android:color/black"
				android:textSize="22dp"/>
		</LinearLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="70dp"
			android:layout_marginBottom="10dp"
			android:gravity="center_horizontal"
			>
			<TextView android:id="@+id/remind_message_id"
				android:layout_width="500dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="-80dp"
				android:layout_centerHorizontal="true"
				android:textColor="@android:color/black"
				android:textSize="24dp"
				android:singleLine="false"/>
		</RelativeLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="200dp"
			>
			<ImageButton android:id="@+id/remind_confirm_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:focusableInTouchMode="true"
				android:background="@drawable/dict_button_bg" />
			<ImageButton android:id="@+id/remind_cancel_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/dict_audio_speed_cancel"
				android:visibility="gone" />
		</LinearLayout>
	</LinearLayout>

</FrameLayout>
