<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.readboy.online.controller.searchword.redical.RedicalSearchListFragment"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.readboy.online.view.ObservableScrollView
            android:id="@+id/scroll_redical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:id="@+id/ll_redical_viewroot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                />
        </com.readboy.online.view.ObservableScrollView>
        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:background="#f0606060"
            android:layout_gravity="center"
            android:text="A"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        <com.readboy.online.view.RulerWidget
            android:id="@+id/sidrbar_redical"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:background="#fff"/>
    </FrameLayout>
</LinearLayout>
